<!DOCTYPE html>
<html>
  <head>
    <title>Emily's Dev Skills</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Emily's Dev Skills</h1>
    <ul>
        <a href="/skills/new">Add Skill</a>
        <% skills.forEach(function(t, idx) { %>
            <li>
                <form action="/skills/<%= idx %>?_method=DELETE"
                    class="delete-form" method="POST">
                    <button type="submit">X</button>
                  </form>
                <a href="/skills/<%= idx %>"><%= t.skill %></a>
            </li>
        <% }); %>
    </ul>
  </body>
</html>